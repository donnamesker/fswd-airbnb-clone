<%= javascript_packs_with_chunks_tag 'property', 'application' %>
<%= stylesheet_packs_with_chunks_tag 'property', 'application' %>

<div class="container">
  <div class="row">
    <div class="col-10">

      <h1 class="text-center">Booking Confirmed!</h1>

      <p class="text-center">Thank you for your booking!</p>

      <div class="row justify-content-center">
        <div class="col-5 col-md-2">
          <div class="fw-bolder">Booking ID:</div>
          <div class="fw-bolder">Property ID:</div>
          <div class="fw-bolder">Check-in:</div>
          <div class="fw-bolder">Check-out:</div>
        </div>
        <div class="col-5 col-md-2">
          <div><%= @booking.id %></div>
          <div><%= @booking.property_id %></div>
          <div><%= @booking.start_date %></div>
          <div><%= @booking.end_date %></div>
        </div>
      </div>

      <div class="row mt-3 justify-content-center">
        <div class="col-12 col-md-4 text-center">
          <%= link_to 'Back to Home', root_path, class: 'btn btn-primary' %>
        </div>
      </div>

      
    </div>
  </div>
</div>